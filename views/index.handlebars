<div class="container content">
    <h1>Burger App</h1>
    
    <h2>Favorite Burgers</h2>

    <ul>
        {{#each burgers}}
         {{#if this.is_favorite}}
           {{ this.burger_name }}
            {{!-- {{>burger/burger-block favorite=true}} --}}
         {{/if}}
        {{/each}}   
    </ul>

    <h2>Burgers I have eaten</h2>

    <ul>
        {{#each burgers}}
         {{#if this.is_eaten}}
            {{ this.burger_name }}
            {{!-- {{burger/burger-block eaten=true}} --}}
         {{/if}}
        {{/each}}   
    </ul>

    <h2>Add a burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burg">Name:</label>
            <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
            <label for="favorite">Favorite?</label><br>
            <input type="radio" name="favorite" value="1" checked> Favorite!<br>
            <input type="radio" name="favorite" value="0"> Eaten!<br>
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>
